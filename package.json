{
  "name": "pool-app-v3",
  "version": "3.0.0",
  "private": true,
  "author": "PoolTogether Inc.",
  "repository": "git@github.com:pooltogether/pool-app.git",
  "scripts": {
    "reinstall": "rm -rf ./node_modules && yarn",
    "dev": "npm-run-all --parallel start:app start:server",
    "start:app": "PORT=3000 node --max-old-space-size=8192 server.js",
    "start:server": "netlify-lambda serve functions",
    "postinstall": "netlify-lambda install",
    "build": "next build && next export && yarn postexport",
    "dist": "yarn build && netlify-lambda build functions",
    "export": "next export",
    "postexport": "node post-export.js",
    "release": "./scripts/sentry-release.sh",
    "distrelease": "yarn test && export NEXT_JS_RELEASE_VERSION=$SENTRY_PROJECT:$(sentry-cli releases propose-version) && yarn dist && yarn release",
    "start": "NODE_ENV=production PORT=80 node server.js",
    "test": "jest",
    "testcov": "jest --coverage --coverageDirectory=coverage && open ./coverage/index.html",
    "watch": "yarn run test --watch",
    "format": "npx prettier --write .",
    "cypress": "NEXT_JS_REDUCE_MOTION=true start-server-and-test dev http://localhost:3000 cypress:run",
    "cypress:open-local": "NEXT_JS_REDUCE_MOTION=true start-server-and-test dev http://localhost:3000 cypress:open",
    "cypress:open": "npx cypress open --env infura_id=$NEXT_JS_INFURA_ID",
    "cypress:run": "npx cypress run --record --key $CYPRESS_RECORD_KEY --env infura_id=$NEXT_JS_INFURA_ID",
    "link-hooks": "./scripts/link-hooks.sh",
    "unlink-hooks": "./scripts/unlink-hooks.sh",
    "link-components": "./scripts/link-components.sh",
    "unlink-components": "./scripts/unlink-components.sh",
    "link-components-and-hooks": "./scripts/link-components-and-hooks.sh",
    "unlink-components-and-hooks": "./scripts/unlink-components-and-hooks.sh",
    "link-h": "./scripts/link-hooks.sh",
    "unlink-h": "./scripts/unlink-hooks.sh",
    "link-c": "./scripts/link-components.sh",
    "unlink-c": "./scripts/unlink-components.sh",
    "link-ch": "./scripts/link-components-and-hooks.sh",
    "unlink-ch": "./scripts/unlink-components-and-hooks.sh"
  },
  "jest": {
    "collectCoverageFrom": [
      "lib/**/*.{ts,js}"
    ],
    "coverageReporters": [
      "text",
      "html"
    ],
    "moduleNameMapper": {
      "^lib/(.*)$": "<rootDir>/lib/$1",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "identity-obj-proxy"
    },
    "verbose": true
  },
  "devDependencies": {
    "@babel/core": "^7.13.16",
    "@babel/plugin-transform-react-jsx": "^7.13.12",
    "@babel/preset-env": "^7.13.15",
